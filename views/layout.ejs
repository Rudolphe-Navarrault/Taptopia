<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Idle Clicker</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="page-container">
      <nav>
        <div class="nav-container">
          <a href="/" class="logo">Idle Clicker</a>
          <div class="nav-links">
            <% if (typeof userId !== 'undefined' && userId) { %>
            <a href="/dashboard">Dashboard</a>
            <a href="/settings">Paramètres</a>
            <a href="/auth/logout">Déconnexion</a>
            <% } else { %>
            <a href="/login">Connexion</a>
            <a href="/register">Inscription</a>
            <% } %>
          </div>
        </div>
      </nav>

      <main><%- body %></main>

      <footer>
        <p>&copy; 2025 Idle Clicker. Tous droits réservés.</p>
      </footer>
    </div>

    <!-- Translations -->
    <script type="module" src="/js/translations/fr.js"></script>
    <script type="module" src="/js/translations/en.js"></script>
    <script type="module" src="/js/translations/index.js"></script>

    <!-- Main script - chargé uniquement sur les pages qui en ont besoin -->
    <% if (typeof skipMainJs === 'undefined' || !skipMainJs) { %>
    <script src="/js/main.js"></script>
    <% } %>
  </body>
</html>
